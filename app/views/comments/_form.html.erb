<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  
  <div class="form-group">
    <%= form.label :body, :class => 'h6' %><br>
    <%= form.text_field :body, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :status, :class => 'h6' %>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public', :class => "custom-select custom-select-sm" %>
  </div>
  <br>
  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
