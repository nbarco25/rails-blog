<br>
<p align="left"><%= @article.created_at.to_date %><br> Author: <%= @article.user.email %></p>
<h1 class='h1-articles'><%= @article.title %></h1>
<br>
<p align="left"><%= @article.body %></p>
<p align="left"><%= current_user.comments %></p>

<br>
<br>
<div>
  <%= link_to_if @article.user_id.to_i == current_user.id.to_i, "Edit", edit_article_path(@article), :class => 'btn btn-warning' %>
  <%= link_to_if @article.user_id.to_i == current_user.id.to_i, "Destroy", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, 
                  :class => 'btn btn-danger' %>
  <%= link_to "Back", root_path, :class => 'btn btn-secondary' %>
</div>
<br>
<br>
<br>
<h5>Comments</h5>
<%= render @article.comments %>
<br>
<div class="card border-info rounded shadow p-3 mb-5 bg-white">
  <div class="card-body">
    <h6>Add a comment:</h6>
    <%= render "comments/form" %>
  </div>
</div>
<br>
